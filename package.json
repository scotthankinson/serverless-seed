        "app-module-path": "^2.2.0",
        "chai": "^4.2.0",
        "mocha": "^6.1.4",
        "mocha-junit-reporter": "^1.23.0",
        "mocha-multi-reporters": "^1.1.7",
        "mocha-sonar-reporter": "^0.1.6",
        "mochawesome": "^4.0.0",
        "nock": "^13.0.5",
        "nyc": "^14.1.1",
        "serverless": "^1.55.1",
