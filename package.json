    "dependencies": {
        "request": "^2.88.0",
        "request-promise-native": "^1.0.8",
        "source-map-support": "^0.5.13"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^0.1.3",
        "@types/aws-lambda": "^8.10.27",
        "@types/bcrypt": "^3.0.0",
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.7",
        "@types/node": "^10.12.18",
